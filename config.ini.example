# Sample configuration for AlynCoin node
ban_minutes=5
offline_mode=false
allow_dns_bootstrap=true
allow_peer_exchange=true
allow_manual_peers=false
require_peer_for_mining=true
seed=peers.alyncoin.com
seed=seed1.alyncoin.com
seed=seed2.alyncoin.com
static_seed=seed1.alyncoin.com:15671
static_seed=seed2.alyncoin.com:15671
rpc_bind=127.0.0.1:1567
rpc_cors=*
self_heal_interval=600
reserve_address=
por_expected_walyn=0
external_address=
hide_peer_endpoints=true
peer_log_mode=tag           # off|tag|masked|full (defaults to tag)

# Validation & sync tuning
#quiet_sync_logs=true        # suppress per-block validation logging
#fast_sync=true              # enable sampled validation during snapshot sync
#fast_sync_sample_rate=0.10  # fraction of blocks to fully verify when fast_sync is enabled
#fast_sync_trailing_full=12  # always deep-verify the last N blocks of the snapshot
#disable_snapshot=true       # force tail-sync; never request or serve snapshots
