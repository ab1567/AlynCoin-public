// Calculate Hash
std::string Block::calculateHash() const {
  std::stringstream ss;
  ss << index << previousHash << timestamp << nonce << minerAddress;
  for (const auto &tx : transactions) {
    ss << tx.calculateHash();
  }
  return Crypto::hybridHash(ss.str());
}

// âœ… **Mine Block with Protobuf and RocksDB Storage**
bool Block::mineBlock(int difficulty) {
  std::cout << "â³ Mining block for: " << minerAddress
            << " with difficulty: " << difficulty << "...\n";

  do {
    nonce++;
    std::stringstream ss;
    ss << index << previousHash << getTransactionsHash() << timestamp << nonce;
    hash = Crypto::hybridHash(ss.str());
  } while (hash.substr(0, difficulty) != std::string(difficulty, '0'));

  std::cout << "âœ… PoW Complete. BLAKE3 Hash: " << hash << "\n";

  keccakHash = Crypto::keccak256(hash);
  std::cout << "âœ… Keccak Hash: " << keccakHash << "\n";

  // zk-STARK proof
  std::string txRoot = getTransactionsHash();
  zkProof = WinterfellStark::generateProof(hash, previousHash, txRoot);
  std::cout << "âœ… zk-STARK Proof Attached to Block.\n";

  // Block signing with Dilithium
  std::string minerDilithiumKeyPath =
      "/root/.alyncoin/keys/" + minerAddress + "_dilithium";
  if (!Crypto::fileExists(minerDilithiumKeyPath + ".key")) {
    std::cout << "âš ï¸ Miner Dilithium private key missing. Generating...\n";
    Crypto::generateDilithiumKeys(minerAddress);
  }

  std::vector<unsigned char> hashBytes(hash.begin(), hash.end());
  std::vector<unsigned char> privKeyBytes =
      Crypto::loadDilithiumKeys("/root/.alyncoin/keys/" + minerAddress)
          .privateKey;
  dilithiumSignature =
      Crypto::toHex(Crypto::signWithDilithium(hashBytes, privKeyBytes));
  publicKeyDilithium = Crypto::getPublicKey(minerAddress);

  std::cout << "âœ… Block Signed with Dilithium Successfully.\n";

  // Block signing with Falcon
  std::string minerFalconKeyPath =
      "/root/.alyncoin/keys/" + minerAddress + "_falcon";
  if (!Crypto::fileExists(minerFalconKeyPath + ".key")) {
    std::cout << "âš ï¸ Miner Falcon private key missing. Generating...\n";
    Crypto::generateFalconKeys(minerAddress);
  }

  std::vector<unsigned char> falconPrivKeyBytes =
      Crypto::loadFalconKeys(minerAddress).privateKey;
  falconSignature =
      Crypto::toHex(Crypto::signWithFalcon(hashBytes, falconPrivKeyBytes));
  publicKeyFalcon = Crypto::getPublicKey(minerAddress);

  std::cout << "âœ… Block Signed with Falcon Successfully.\n";

  return true;
}

