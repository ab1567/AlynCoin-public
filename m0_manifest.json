{
  "kdf": {
    "algorithm": "argon2id",
    "profiles": {
      "interactive": { "mem_mib": 256, "target_ms": [250, 500] },
      "sensitive":   { "mem_mib": 512, "target_ms": [500, 1200] }
    },
    "salt_bytes": 16,
    "key_bytes": 32
  },
  "aead": {
    "algorithm": "xchacha20poly1305",
    "key_bytes": 32,
    "nonce_bytes": 24,
    "tag_bytes": 16
  },
  "totp": {
    "algorithm": "SHA1",
    "digits": 6,
    "period_seconds": 30,
    "allowed_drift_steps": 1
  },
  "qr": {
    "gui": { "format": "png" },
    "cli": { "ascii": true, "print_uri": true }
  },
  "wasm": {
    "primary": "WAMR",
    "fallback": "Wasm3",
    "deterministic": true,
    "metering": true,
    "floating_point": false,
    "threads": false,
    "max_memory_pages": 512
  },
  "metrics": {
    "format": "prometheus",
    "default_port": 9100,
    "path": "/metrics",
    "labels": ["chain_id", "node_role", "version"]
  },
  "interop": {
    "btc_network": "testnet3",
    "evm_network": "sepolia"
  },
  "ci": {
    "provider": "github_actions",
    "os_matrix": ["ubuntu-latest", "macos-latest", "windows-latest"],
    "python_version": "3.11"
  },
  "release_signing": {
    "allowed": ["gpg", "cosign"]
  },
  "security_policy": {
    "zeroize_secrets": true,
    "constant_time_compare": true,
    "passphrase_min_length": 12,
    "breach_list_check": false
  }
}
